<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Whether to show Smooth Display feature in Settings Options -->
    <bool name="config_show_smooth_display">false</bool>

    <!-- Charging info current divider, if needed -->
    <integer name="config_currentInfoDivider" translatable="true">1000</integer>

    <!-- Update battery info every second when device is charging -->
    <bool name="config_alternateFastchargeInfoUpdate">true</bool>

    <!-- The number of vibration intensity levels supported by the device.
         Note that this should correspond to the ability to vary the vibration am>
         enough dynamic range to have at least as many distinct intensity levels >
         Supported values are 1, 2, 3. If '1', the settings app will use a toggle>
         otherwise a slider. If '3', the settings app maps intensities directly t>
         supported by the Vibrator HAL APIs. If '2', then the levels will be mapp>
         VIBRATION_INTENSITY_LOW and VIBRATION_INTENSITY_HIGH, which gives the mo>
         scaling vibrations. The medium intensity will be skipped.
         The default intensity values are configured at
         frameworks/base/core/res/res/values/config.xml's config_default[type]Vib>
         Make sure that each default intensity value is consistent with the suppo>
         here. If this settings supports only 2 levels, for example, then the def>
         should be either LOW (1) or HIGH (3).
    -->
    <integer name="config_vibration_supported_intensity_levels">3</integer>

    <!-- Whether to show Minimum and Maximum refresh rate in display settings -->
    <bool name="config_show_refresh_rate_controls">true</bool>
    <bool name="config_supports_dynamic_refresh_rate_controls">true</bool>

    <!-- Whether show refresh rate QS tile -->
    <bool name="config_showRefreshRateQsTile">true</bool>

    <!-- Whether to show peak refresh rate in display settings -->
    <bool name="config_show_peak_refresh_rate_switch">true</bool>

    <!-- Whether to show min refresh rate in display settings -->
    <bool name="config_show_min_refresh_rate_switch">true</bool>

</resources>
